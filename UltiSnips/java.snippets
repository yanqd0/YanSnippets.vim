# if
snippet if "`if` block" b
if (${1:boolean}) {
	${0:${VISUAL:\/\/ TODO: if then...}}
}
endsnippet

snippet ife "`if else` block" b
if (${1:boolean}) {
	${2:${VISUAL:\/\/ TODO: if $1 then...}}
} else {
	${3:// TODO: else then...}
}
endsnippet

snippet ifi "`if elif` block" b
if (${1:boolean}) {
	${2:${VISUAL:\/\/ TODO: if $1 then...}}
} else if (${3:boolean}) {
	${4:// TODO: else if $3 then...}
}
endsnippet

snippet ifie "`if elif else` block" b
if (${1:boolean}) {
	${2:${VISUAL:\/\/ TODO: if $1 then...}}
} else if (${3:boolean}) {
	${4:// TODO: else if $3 then...}
} else {
	${5:// TODO: else then...}
}
endsnippet
